@model HSNHospitalProject.Models.ViewModels.AddAppointment
@{
    ViewBag.Title = "List";
}
    <div>
        <a class="btn btn-success" style="margin-top:1em" href="/Patients/Add">Add New</a>
    </div>
    <div style="float:right">
        <a class="btn btn-success" style="margin-top:-4em" href="/Appointments/Add">Book an Appointment</a>
    </div>
    <div>
        @foreach (var Patient in @Model.Patients)
        {
            <h2 style="margin-top:1em"><a href="/Patients/Show/@Patient.patientId">@Patient.patientFName @Patient.patientLName</a></h2>
            <div style="margin-left:5em">Patient Email Address: @Patient.patientEAddress</div>
            <div style="margin-left:5em">Patient Phone Number: @Patient.patientPNumber</div>
        }

    </div>
    




