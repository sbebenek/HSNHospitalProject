@model HSNHospitalProject.Models.GalleryImages

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this image?</h3>
<div>
    <hr />
    <img src="~/Content/GalleryImages/@Model.galleryimageref" width="300" alt="@Model.galleryimagealt" />
    <dl class="dl-horizontal">


        <dt>
            Title:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.galleryimagetitle)
        </dd>

        <dt>
            Alt Text:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.galleryimagealt)
        </dd>

        <dt>
            Date Posted:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.galleryimagedate)
        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.galleryimagedescription)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
