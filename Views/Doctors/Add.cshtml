@model HSNHospitalProject.Models.ViewModels.DoctorDepartment
@{
    ViewBag.Title = "Add";
}

<h2 style="text-align:center">Doctor Information</h2>
<form method="POST" action="/Doctors/Add">
    @Html.AntiForgeryToken()
    <div>
        <label>First Name:</label>
        <input class="form-control" type="text" name="f_name" />
    </div>
    <div>
        <label>Last Name:</label>
        <input class="form-control" type="text" name="l_name" />
    </div>
    <div>
        <label>Date of Birth:</label>
        <input class="form-control" type="text" name="dob" />
    </div>
    <div>
        <label>Phone Number:</label>
        <input class="form-control" type="text" name="p_number" />

    </div>
    <div>
        <label>Email Address:</label>
        <input class="form-control" type="text" name="e_address" />
    </div>
    <div>
        <label>Working days:</label>
        <input class="form-control" type="text" name="work_days" />
    </div>
    <div style="font-size:15px">
        <span style="color:black;font-weight:bold">Department:</span><br />
        <select style="margin-top:1em" id="departmentId" type="text" name="departmentId">
            @{
                foreach (var department in @Model.departments)
                {
                    <option value="@department.departmentId">@department.departmentName</option>
                }
            }
        </select>
    </div>
    <div style="margin-top:1em">

        @Html.ValidationSummary(true)
        @Html.LabelFor(model => model.date)
        <input name="join_date"
               @Html.EditorFor(model => model.date) />
        @Html.ValidationMessageFor(model => model.date)
    </div>

    <div style="margin:1em;text-align:center;">
        <input type="submit" name="submit" class="btn btn-success" style="font-size:20px" value="Add" />
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "List")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


