@model HSNHospitalProject.Models.GalleryImages

<div class="modal-header">
    <h4 class="modal-title" id="exampleModalLongTitle">@Model.galleryimagetitle</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <img class="" src="~/Content/GalleryImages/@Model.galleryimageref" style="max-width:50%" alt="@Model.galleryimagealt"/>
            </div>
            <div class="col-sm">
                <p>@Model.galleryimagedescription</p>
                <p><small><em>Posted on @Model.galleryimagedate.ToLongDateString()</em></small></p>
            </div>
        </div>
    </div>
    
</div>

<div class="modal-footer">
    <a href="@Url.Action("Edit", new { id = Model.galleryimageid})" class="btn btn-success">Edit</a>
    <a href="@Url.Action("Delete", new { id = Model.galleryimageid})" class="btn btn-success">Delete</a>
    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
</div>